@page
@model ZipUpload.IndexModel
@{
    ViewData["Title"] = "Upload ZIP";
}

<h2>@ViewData["Title"]</h2>
<h3>@Model.Message</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="FileUpload.Username" class="control-label"></label>
                <input asp-for="FileUpload.Username" type="text" class="form-control" />
                <span asp-validation-for="FileUpload.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.Password" class="control-label"></label>
                <input asp-for="FileUpload.Password" type="password" class="form-control" />
                <span asp-validation-for="FileUpload.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.File" class="control-label"></label>
                <input asp-for="FileUpload.File" type="file" accept="application/zip, application/octet-stream" class="form-control" style="height: auto" />
                <span asp-validation-for="FileUpload.File" class="text-danger"></span>
            </div>
            <input type="submit" value="Upload" class="btn btn-default" />
        </form>
    </div>
</div>
